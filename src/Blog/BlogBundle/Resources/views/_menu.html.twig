<div id="header-container" class="navbar-wrapper">
    <div id="header-menu" class="container">
        <div id="enter-container">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                {#<a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>#}
                <form id="login-form" class="form-horizontal" action="/login_check" method="post">
                    <div class="form-group">
                        {#<input type="hidden" name="_csrf_token" value="5cc09f3929d2265b5ef9e7b84aef0a7c303fd13b">#}

                        <label for="username">Username:</label>
                        <input class="form-control input-sm" type="text" id="username" name="_username" value="" required="required">
                    </div>
                    <div class="form-group">

                        <label for="password">Password:</label>
                        <input class="form-control input-sm" type="password" id="password" name="_password" required="required">
                    </div>
                    <div class="form-group" style="float: left;">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                        <label for="remember_me">Remember me</label>
                    </div>
                    <div class="form-group" style="float: right;">
                        <input class="btn btn-primary btn-xs" type="submit" id="_submit" name="_submit" value="Login">
                    </div>
                </form>
            {% endif %}
        </div>
        <div class="navbar navbar-inverse navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">Home</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('about') }}">About me</a></li>
                        <li><a href="{{ path('guestbook') }}">Guestbook</a></li>
                        {% if is_granted("ROLE_ADMIN") %}
                            <li><a href="{{ path('add_article') }}">Add post</a></li>
                        {% endif %}
                    </ul>
                    <div class="navbar-form navbar-right">
                        <div class="form-group">
                            <input id="search-input" type="text" class="form-control" placeholder="Search">
                        </div>
                        <button class="btn btn-search" onclick="inlineSearch('{{ path('homepage') }}')">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>