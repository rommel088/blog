{% extends "AcmeDemoBundle:Plane:home.html.twig" %}

{% block content %}
    <h2>{{ info.header }}</h2>
    <div class="row">
        <div class="col-md-9 col-md-push-3">
            {{ info.description }}
            {% for craft in info.crafts %}
                <div class="alert alert-success">{{ craft }}</div>
            {% endfor %}
        </div>
        <div class="col-md-3 col-md-pull-9">
            {% render(controller("AcmeDemoBundle:Plane:photo", { 'name' : info.name })) %}
        </div>
    </div>
{% endblock %}